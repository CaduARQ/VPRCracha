@model VPRCracha.Domain.Model.Regiao

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Cadastrar Nova Região</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <br />
         <fieldset>
        <legend>Dados do Responsável da Nova Região</legend>
        <div class="editor-label">
            @Html.Label("Nome do Responsável")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ResponsavelRegiao.Nome, "teste")
            @Html.ValidationMessageFor(model => model.ResponsavelRegiao.Nome)
        </div>        
        <div class="editor-label">
            @Html.Label("Login")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ResponsavelRegiao.Login, "LoginUsuario")
            @Html.ValidationMessageFor(model => model.ResponsavelRegiao.Login)
        </div>
        <div class="editor-label">
            @Html.Label("Senha")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ResponsavelRegiao.Senha, "SenhaUsuario")
            @Html.ValidationMessageFor(model => model.ResponsavelRegiao.Senha)
        </div>
    </fieldset>
    </fieldset>    
   
    
    <br />
    <p>
        <input type="submit" value="Cadastrar Região" />
    </p>
}

<div>
    @Html.ActionLink("Voltar para a lista de Regiões cadastradas", "Index")
</div>



<script type="text/javascript">
    var usuarioID;

    function onRowSelected(e) {
        usuarioID = e.row.cells[0].innerHTML;
        usuarioNome = e.row.cells[1].innerHTML;
        
        $("#nomeUsuario").text(usuarioNome);
    }

    function onDataBinding(e) {
        e.data = $.extend(e.data, { idUsuario: usuarioID });
    }
</script>